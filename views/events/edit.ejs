<% include ../partials/header %>


<div class='container'>
    <div class='row'>
        <h1 class='text-center'>Edit <%= event.name %></h1>

        <div style='width: 40%; margin: 25px auto;'>
            <form action='/events/<%= event._id %>?_method=PUT' method='POST'>

                <div class='form-group'>

                    <label for='name'>event Name</label>
                    <input type='text' name='event[name]' value='<%= event.name %>' class='form-control'>

                </div>
                <div class='form-group'>

                    <label for='imageUrl'>Image URL</label>
                    <input type='text' name='event[imageUrl]' value='' class='form-control'>


                </div>

                <div class='form-group'>
                    <label for='description'>event Description</label>
                    <input type='text' name='event[description]' value='' class='form-control'>
                </div>

                <div class='form-group'>
                    <button class='btn btn-lg btn-success btn-block'>Submit!</button>
                </div>


            </form>

            <a href='/events'>Return to events</a>

        </div>
    </div>
</div>

<% include ../partials/footer %>
