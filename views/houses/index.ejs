<% include ../partials/header %>

<div class="container-fluid">
    <h1 class='h1-responsive'>Houses</h1>

    <% houses.forEach(function(house){ %>
        <div class="row">
            <div class="col-md-12" style='margin-bottom: 20px;'>
                <div class="card" >
                    <div class="card-header">
                        <h3><%= house.name %><span class='float-right'>#1</span></h3>
                    </div>
                    <div class="card-body">
                        <p><%= house.houseMaster %></p>
                        <p><%= house.email %></p>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>

</div>

