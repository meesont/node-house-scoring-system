                    <!--    <div class="custom-control custom-radio custom-control-inline">-->
                    <!--        <input type="radio" class="form-control custom-control-input" id="male" name="evtGender">-->
                    <!--        <label class="custom-control-label" for="male">Male</label>-->
                    <!--    </div>-->
                        
                    <!--    <div class='custom-control custom-radio custom-control-inline'>-->
                    <!--        <input type='radio' class='form-control custom-control-input' id='female' name='evtGender'>-->
                    <!--        <label class='custom-control-label' for='female'>Female</label>-->
                    <!--    </div>-->
                    <!--    <div class='custom-control custom-radio custom-control-inline'>-->
                    <!--        <input type='radio' class='form-control custom-control-input' id='mixed' name='evtGender'>-->
                    <!--        <label class='custom-control-label' for='mixed'>Mixed</label>-->
                    <!--    </div>-->
                    <!--</div>-->
                </form>

            </div>
            
            <div class='modal-footer'>
                <button type='button' class='btn btn-danger' data-dismiss='modal'>Close</button>
                <button type='submit' form='newEventForm' value= 'Submit' class='btn btn-success'>Add new event</button>
            </div>
        </div>
    </div>
    
</div>

